{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@app": ["app"],                // for app.ts
      "@routes/*": ["routes/*"],      // for all routes
      "@middleware/*": ["middleware/*"] // for all middleware
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
