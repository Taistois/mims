{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",                     // use ESNext for ESM
    "moduleResolution": "node",             // use 'node' instead of 'node10'
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "ignoreDeprecations": "6.0",            // keep this to silence warnings
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    },
    "outDir": "dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "tests"]
}
